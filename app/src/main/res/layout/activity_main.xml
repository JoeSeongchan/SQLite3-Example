<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">


  <EditText
    android:id="@+id/et_released_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPersonName"
    app:layout_constraintBottom_toBottomOf="@+id/tv_released_main"
    app:layout_constraintStart_toStartOf="@+id/et_movieTitle_main" />

  <Button
    android:id="@+id/btn_search_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:text="search"
    app:layout_constraintBottom_toBottomOf="@+id/btn_init_main"
    app:layout_constraintStart_toEndOf="@+id/btn_insert_main" />

  <Button
    android:id="@+id/btn_insert_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="insert"
    app:layout_constraintBottom_toBottomOf="@+id/btn_init_main"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

  <EditText
    android:id="@+id/et_director_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPersonName"
    app:layout_constraintBottom_toBottomOf="@+id/tv_director_main"
    app:layout_constraintStart_toStartOf="@+id/et_movieTitle_main" />

  <TextView
    android:id="@+id/tv_movieTitle_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="36dp"
    android:layout_marginTop="32dp"
    android:text="Movie Title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_director_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:text="Director"
    app:layout_constraintStart_toStartOf="@+id/tv_movieTitle_main"
    app:layout_constraintTop_toBottomOf="@+id/tv_movieTitle_main" />

  <TextView
    android:id="@+id/tv_released_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="36dp"
    android:text="Released Year"
    app:layout_constraintStart_toStartOf="@+id/tv_director_main"
    app:layout_constraintTop_toBottomOf="@+id/tv_director_main" />

  <Button
    android:id="@+id/btn_init_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="28dp"
    android:text="init"
    app:layout_constraintEnd_toStartOf="@+id/btn_insert_main"
    app:layout_constraintTop_toBottomOf="@+id/tv_released_main" />

  <EditText
    android:id="@+id/et_movieTitle_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="36dp"
    android:ems="10"
    android:inputType="textPersonName"
    app:layout_constraintBottom_toBottomOf="@+id/tv_movieTitle_main"
    app:layout_constraintEnd_toEndOf="parent" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/tv_listTitle_main"
        android:layout_width="117dp"
        android:layout_height="418dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent" />

      <TextView
        android:id="@+id/tv_listDirector_main"
        android:layout_width="117dp"
        android:layout_height="418dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

      <TextView
        android:id="@+id/tv_listReleased_main"
        android:layout_width="117dp"
        android:layout_height="418dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>